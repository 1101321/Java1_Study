package college.intro1;

public class PracticalTraining1_1 {

	public static void main(String[] args) {
		// TODO 自動生成されたメソッド・スタブ
		// Java言語入門1-1実習
		
		// ◆ 変数
		//【問題1ー1】
		/*
		都道府県の人口を設定したい。最大は1億人とする。
		変数populationを定義し東京都の人口を設定し表示しなさい。
		*/
		int population = 13843403;
		System.out.println("東京都の人口：" + population + "人");
		
		//【問題1ー2】
		/*
		変数speedに自動車の時速(km/h)を設定したい。
		値は整数。最大は399までとする。
		変数speedを定義し175を設定し表示しなさい。
		*/
		System.out.println();//改行
		short speed = 175;
		System.out.println("自動車の時速:" + speed + "(km/h)");
		
		//【問題1ー3】
		/*
		変数monthに暦の月を設定したい。
		変数monthを定義し4を設定し表示
		しなさい。
		*/
		System.out.println();
		byte month = 4;
		System.out.println(month + "月");
	}

}
